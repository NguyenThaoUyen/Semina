<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/welcome_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Information account"
       android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/red"
        android:textStyle="bold"


          />
    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginaccount"
        android:layout_below="@id/welcome_profile"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/welcome_profile"
        android:layout_toRightOf="@id/text_login"
        android:background="#03A9F4"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registeraccount"
        android:layout_below="@id/text_login"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/btn_login"
        android:layout_toRightOf="@id/text_register"
        android:background="@color/red"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="123dp"


   />
  <TextView
      android:id="@+id/text_gmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/hint_gmail"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_below="@id/text_register"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      />
    <EditText
        android:id="@+id/show_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_register"
        android:layout_toRightOf="@+id/text_gmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"

        />
    <TextView
        android:id="@+id/text_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/text_gmail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_review"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"

        />
    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post"
        android:background="@color/blue"
        android:layout_below="@id/text_review"
        android:layout_toRightOf="@+id/content"
        android:layout_marginStart="30dp"/>




</RelativeLayout>
</LinearLayout>



