<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:background="#ADD5DB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/default_avatar"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
    <TextView
        android:id="@+id/name_avatar"
        android:layout_toRightOf="@+id/image_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:layout_toEndOf="@+id/image_avatar"
        android:layout_marginLeft="5dp"
        android:text="@string/name_avatar"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/name_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÆ¡i review"
        android:layout_below="@+id/name_avatar"
        android:layout_toEndOf="@+id/image_avatar"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
       android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_avatar"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/name_review"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:text="@string/review"
        android:textSize="14sp"
        android:maxLines="1"/>

</RelativeLayout>

</android.support.v7.widget.CardView>